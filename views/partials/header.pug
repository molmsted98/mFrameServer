.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/')
                i.fa.fa-cube
                | mFrame
        .collapse.navbar-collapse
            ul.nav.navbar-nav
                li(class=(title == 'Home') ? 'active' : undefined)
                    a(href='/') Home
                li(class=(title == 'Upload') ? 'active' : undefined)
                    a(href='/upload') Upload
                if user != null
                    li(class=(title == 'Following') ? 'active' : undefined)
                        a(href='/' + user.id + '/following') Following
                if user != null
                    li(class=(title == 'My Room') ? 'active' : undefined)
                        a(href='/' + user.id) My Room
            ul.nav.navbar-nav.navbar-right
                if  user == null
                    li(class=(title == 'Login') ? 'active' : undefined)
                        a(href='/login') Login
                    li(class=(title == 'Create Account') ? 'active' : undefined)
                        a(href='/signup') Create Account
                else
                    li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
                        a.dropdown-toggle(href='#', data-toggle='dropdown')
                            if user.profile.picture
                                img(src=user.profile.picture)
                            else
                                img(src=user.gravatar())
                            span= user.username || user.profile.name || user.email || user.id
                            i.caret
                        ul.dropdown-menu
                            li
                                a(href='/' + user.id) My Room
                            li.divider
                            li
                                a(href='/account') Settings
                            li.divider
                            li
                                a(href='/logout') Logout
